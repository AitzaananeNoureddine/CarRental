
@model IEnumerable<ProjetASP.net.Models.Voiture_info>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section>
    <div class="container">

        <br />
        <div class="row justify-content-start">
            @if (Model != null)
            {
                foreach (ProjetASP.net.Models.Voiture_info item in Model)
                {


                    <div class=" col-md-3">
                        <div class="card card-product">
                            <div class="card-product-img"
                                 style="background: url('../../Content/Images/Voiture/@item.voiture.Image.Trim()') bottom no-repeat; background-size: cover; ">
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">
                                    @item.voiture.Nom <br />
                                    <small>@item.voiture.Prix dh/j</small>
                                </h5>
                                <p class="card-text">
                                    @item.voiture.Marque<br />
                                    propriétaire : @item.user.Name
                                </p>

                                <a href="~/Voiture/Index?VoitureId=@item.voiture.Id" class="btn ">Voir plus <i class="bi bi-chevron-right"></i></a>
                            </div>

                        </div>
                    </div>
                }
            }
            else
            {
                <h3>vide</h3>
            }

        </div>
    </div>
</section>

