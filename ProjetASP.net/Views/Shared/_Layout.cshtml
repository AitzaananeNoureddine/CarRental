<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <title>@ViewBag.Title - Car rental application</title>

    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/css")

</head>
<body>
    <header class="bg-red">
        <div class="container">
            <nav class="navbar  navbar-expand-lg .bg-red ">

                @Html.ActionLink("CarBooking", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                <a class="navbar-toggler" style="border: none" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"><i class="bi bi-list"></i></span>
                </a>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav" style=" flex: 6">
                        <li class="nav-item ">
                            <a href="~/Home/Index" class="nav-link ">Home</a>

                        </li>
                        <li class="nav-item ">
                            <a href="~/Voiture/ListVoiture" class="nav-link ">list voiture </a>
                        </li>

                        <li class="nav-item ">
                            <a href="~/Home/Contact" class="nav-link "> Contact </a>
                        </li>
                        <li class="nav-item ">
                            <a href="~/Home/About" class="nav-link "> A propos </a>
                        </li>

                    </ul>
                    <ul class="navbar-nav" style=" flex: 3">
                        <li class="nav-item">

                            <!-- Button trigger modal -->
                            <a class="nav-link" data-toggle="modal" data-target="#exampleModal">
                                <span class="Nan-icon">
                                    <i class="bi bi-search"></i>
                                </span>
                                Rechecher
                            </a>



                        </li>
                        <li class="nav-item">
                            <a class="nav-link w3-left" style="cursor: pointer;" onclick="openRightMenu()">
                                <span class="Nan-icon">
                                    <i class="bi bi-box-arrow-in-left"> </i>
                                </span>

                                Se Connecter
                            </a>
                        </li>

                    </ul>
                </div>
            </nav>

            <!-- Overlay -->
            <div class="w3-overlay w3-animate-opacity" onclick="closeRightMenu()" style="cursor:pointer" id="myOverlay"></div>
            <!-- menu -->
            <div class="w3-sidebar w3-bar-block w3-dark-grey w3-animate-right" style="display:none;right:0 ; top: 0; width: 350px ;z-index:5" id="rightMenu">
                <button onclick="closeRightMenu()" class="w3-bar-item w3-button w3-large"> &times;</button>
                <br>
                <h2 class="w3-bar-item">
                    Se Connecter à
                </h2>
                <br>
                <div style=" margin-left : 2rem">
                    @Html.ActionLink("Espace Locataire", "SignIn", "Login", new { role = "Locataire" }, htmlAttributes: new { @class = "w3-bar-item w3-button nav-link" })
                    @Html.ActionLink("Espace Propriétaire", "SignIn", "Login", new { role = "Proprietaire" }, htmlAttributes: new { @class = "w3-bar-item w3-button nav-link" })
                    @Html.ActionLink("Espace Administrateur", "SignIn", "Login", new { role = "Administrateur" }, htmlAttributes: new { @class = "w3-bar-item w3-button nav-link" })
                </div>

            </div>
            <!-- Modal -->
            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content"
                         style="background-color: rgba(142, 35, 35, 0.00);
                         border: none;
                         margin: 5.5rem auto 1rem 4rem; !important; ">

                        <div class="modal-body">
                            <div class="Model-content-form">


                                <form action="/Voiture/ListVoiture" method="post">
                                    <div class="input-group">
                                        <input name="TextRecherche" type="text" class="form-control form-search" aria-label="Text input with dropdown button">
                                        <select name="RecherchePar" class="custom-select form-search">
                                            <option value="0" selected>Recherche par : </option>
                                            <option value="Nom">Nom de voiture</option>
                                            <option value="Marque">Marque</option>
                                            <option value="Couleur">Couleur</option>
                                            <option value="Annee">Année</option>
                                            <option value="Km">Km</option>
                                            <option value="Proprietaire">Nom de propriétaire    </option>
                                        </select>
                                        <div class="input-group-append">
                                            <button class="btn form-search" type="submit">
                                                <span class="Nan-icon">
                                                    <i class="bi bi-search"></i>
                                                </span>
                                            </button>
                                        </div>
                                    </div>

                                </form>
                            </div>

                        </div>

                    </div>
                </div>
            </div>

        </div>

    </header>



    <div>
        @RenderBody()

        <footer>
            <div class="container" foot1>

            </div>
            <div class="foot2">
                Created by Ilias & Adnane & Nour-Eddine  -  at @DateTime.Now.Year
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/CustomJS")
    @RenderSection("scripts", required: false)
    <script type="application/javascript">
        $('input[type="file"]').change(function(e){
            var fileName = e.target.files[0].name;
            $('.custom-file-label').html(fileName);
        });
    </script>
</body>
</html>
